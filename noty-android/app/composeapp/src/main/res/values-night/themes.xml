<resources xmlns:tools="http://schemas.android.com/tools">
    <bool name="lightNavEnabled">false</bool>
    <!-- Base application theme. -->
    <style name="Theme.Noty" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/defaultBlack</item>
        <item name="colorPrimaryVariant">@color/defaultBlack</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/defaultBlack</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Noty.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.JetQuotes.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.JetQuotes.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark" />
</resources>
